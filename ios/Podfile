platform :ios, '14.0'
source 'https://cdn.cocoapods.org/'

# نفعّل frameworks لكن كرابط ساكن (أنسب مع Flutter)
use_frameworks! :linkage => :static

flutter_root = ENV['FLUTTER_ROOT']
require File.expand_path(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper'))

flutter_ios_podfile_setup

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # FirebaseCoreInternal يحتاج GoogleUtilities بموديول هيدرز عند الربط الساكن
  pod 'GoogleUtilities', :modular_headers => true
end

post_install do |installer|
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['SWIFT_VERSION'] = '5.0'
    end
  end

  # تأكد أن بود Flutter يعرّف موديول (يُسهل الاستيراد في البلغ-إنز)
  installer.pods_project.targets.each do |t|
    if t.name == 'Flutter'
      t.build_configurations.each do |config|
        config.build_settings['DEFINES_MODULE'] = 'YES'
      end
    end
  end
end
