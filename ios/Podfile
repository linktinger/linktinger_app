platform :ios, '14.0'
source 'https://cdn.cocoapods.org/'

# تفعيل frameworks مع الربط الساكن (أفضل مع Flutter لتقليل مشاكل linking)
use_frameworks! :linkage => :static
use_modular_headers!

# إعدادات Flutter
flutter_root = ENV['FLUTTER_ROOT']
require File.expand_path(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper'))

flutter_ios_podfile_setup

target 'Runner' do
  # تثبيت جميع الـ pods الخاصة بـ Flutter
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # إصلاحات FirebaseCoreInternal و sqflite_darwin مع الربط الساكن
  pod 'GoogleUtilities', :modular_headers => true
end

post_install do |installer|
  # ضبط إعدادات جميع الـ targets
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['SWIFT_VERSION'] = '5.0'
    end
  end

  # التأكد أن بود Flutter يعرّف موديول (DEFINES_MODULE)
  installer.pods_project.targets.each do |t|
    if t.name == 'Flutter'
      t.build_configurations.each do |config|
        config.build_settings['DEFINES_MODULE'] = 'YES'
      end
    end
  end
end
